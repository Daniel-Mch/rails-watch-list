<div class="container">

  <h2>
   <%= @list.name %>
  </h2>

  <div class="card">

      <% @list.movies.each do |movie| %>
        <h2><%= movie.title %></h2>
        <p><%= movie.overview %></p>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <p><%=  bookmark.comment%></p>
      <% end %>
  </div>

  <%= link_to list_path(@list), { class: "btn btn-primary" } do %>
    <%= @list.name %>
    <span class="label label-primary">OPEN</span>
  <% end %>

  <p>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
  </p>

  <p>
    <%= link_to "Back to lists", lists_path  %>
  </p>

</div>
